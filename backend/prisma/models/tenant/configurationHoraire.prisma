// Configuration des horaires de travail
// IMPORTANT: Les heures sont stockées en format texte HH:MM (heure locale)
// Cela évite les problèmes de timezone

model ConfigurationHoraire {
  id                     String  @id @default(uuid())
  heureDebut             String // Format HH:MM (ex: "08:30")
  heureFin               String // Format HH:MM (ex: "18:00")
  heureDebutPause        String? // Format HH:MM (ex: "12:00")
  heureFinPause          String? // Format HH:MM (ex: "13:00")
  toleranceRetardMinutes Int? // Tolérance de retard en minutes
  isActive               Boolean @default(false)
  description            String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("configurations_horaire")
}
