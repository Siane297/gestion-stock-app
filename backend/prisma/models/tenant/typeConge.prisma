// Types de congés disponibles pour l'organisation
model TypeConge {
    id                String   @id @default(uuid())
    nom               String // Ex: "Congés Payés", "RTT", "Congé Maladie"
    description       String? // Description détaillée
    estPaye           Boolean? @default(true) // Congé payé ou non
    necessiteDocument Boolean? @default(false) // Nécessite un justificatif
    couleur           String // Couleur pour l'affichage UI (hex)
    estActif          Boolean  @default(true)

    // Relations
    conges Conge[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("types_conge")
}
