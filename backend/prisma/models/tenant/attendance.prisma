// Mod√®le Attendance - Enregistrement des pointages

// Type de pointage
enum AttendanceType {
  ENTREE
  SORTIE
  ABSENCE
}

model Attendance {
  id         String         @id @default(uuid())
  employeeId String
  type       AttendanceType
  location   String?
  notes      String?

  // Relations
  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  heurePointage DateTime @default(now())

  @@index([employeeId, heurePointage])
  @@map("attendances")
}
