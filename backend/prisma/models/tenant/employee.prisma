// Source de création: src/services/tenantService.ts (applyTenantMigrations)

// Sexe de l'employé
enum Sexe {
  MASCULIN
  FEMININ
}

model Employee {
  id            String    @id @default(uuid())
  matricule     String    @unique
  fullName      String
  email         String?   @unique
  photo         String?
  positionId    String?
  departmentId  String?
  phoneNumber   String?
  address       String?
  sexe          Sexe?
  dateNaissance DateTime? @db.Date
  hireDate      DateTime  @default(now())
  isActive      Boolean   @default(true)
  isOwner       Boolean   @default(false)

  // Relations
  position   Poste?      @relation(fields: [positionId], references: [id])
  // department Departement? @relation(fields: [departmentId], references: [id])
  tenantUser TenantUser?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@map("employees")
}
