// Configuration personnalis√©e du badge par organisation

model BadgeCustomization {
  id        String @id @default(uuid())
  companyId String @unique

  // Couleurs personnalisables (format hex ou rgba)
  backgroundColor String @default("#2B48D1")
  textColor       String @default("#ffffff")
  borderColor     String @default("rgba(255, 255, 255, 0.6)")

  isActive Boolean @default(false)

  // Relation
  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("badge_customizations")
}
